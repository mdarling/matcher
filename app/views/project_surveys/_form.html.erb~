      <ul>
      <% @project_survey.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<h3>The following information will be added to a searchable database.  Students interested in your job postings will contact you based on the information you provide.</h3>
  <div class="field">
    <%= f.label "Title of Project" %><br />
    <%= f.text_field :projectTitle %>
  </div>
  <div class="field">
    <%= f.label "Description of Project" %><br />
    <%= f.text_area :projectDescription %>
  </div>
  <h2>Enter project contact information (optional) </h2>
  <div class="field">
    <%= f.label "Email address" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :department %><br />
    <%= f.text_field :department %>
  </div>
  <div class="field">
    <%= f.label :researchArea %><br />
    <%= f.text_area :researchArea %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
