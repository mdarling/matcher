<div id="wrap">
	
	<div id="header">
		<%= form_for(@student_profile) do |f| %>
  			<% if @student_profile.errors.any? %>
    			<div id="error_explanation">
    	  			<h2><%= pluralize(@student_profile.errors.count, "error") %> 							prohibited this student profile from being saved:</h2>
    	  			<ul>
				    <% @student_profile.errors.full_messages.each do |msg| %>
    	    			<li><%= msg %></li>
    	  			<% end %>
    	  			</ul>
    			</div>
  			<% end %> <!-- End If -->
	</div> <!-- End of header div -->
	
	<div id="nav">
	</div>
	
	<div id="main">
	  <div class="field">
  	  <%= f.label "First Name" %><br />
  	  <%= f.text_field :firstName, :class => 'textField' %>
		</div>
    <div class="field">
      <%= f.label "Last Name" %><br />
      <%= f.text_field :lastName, :class => 'textField' %>
    </div>
    <div class="field">
      <%= f.label "Banner Number" %><br />
      <%= f.text_field :unmID, :class => 'textField' %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email, :class => 'textField' %>
    </div>
    <div class="field">
      <%= f.label "Phone Number" %><br />
      <%= f.text_field :phoneNumber, :class => 'textField' %>
    </div>
    <div class="field">
      <%= f.label "Department" %><br />
      <%= f.select :department,  options_from_collection_for_select(Department.all, "name", "name",  @student_profile.department), :style => "width:100px;", :include_blank => true , :selected => nil %>

    </div>
  	
	</div> <!-- End of main div -->
	
	<div id="sidebar">
	    <div class="field">
			<%= f.label :major %><br />
			<%= f.text_field :major, :class => 'textField' %>
		</div>
 	  <div class="field">
  	  <%= f.label :minor %><br />
  	  <%= f.text_field :minor, :class => 'textField' %>
  	</div>
 	  <div class="field">
  	 	 <%= f.label "Research Interests" %><br />
  	 	 <%= f.text_area :interests, :class => 'textArea' %>
 		</div>
 		 	  <div class="field">
  	 	 <%= f.label "Previous Research Experience" %><br />
  	 	 <%= f.text_area :experience, :class => 'textArea' %>
 		</div>
 		<div class="field"> 
 		 	<%= f.label "Academic Standing" %><br />
  	  <%= f.select :academicLevel, options_for_select([["Select One", ""], "Freshman", "Sophmore", "Junior", "Senior"], @student_profile.academicLevel) %>
  	 
		</div>
		   <div class="field">
   		<%= f.label "Expected Graduation" %><br />
   		<%= f.date_select :expectedGraduation, :discard_day => true %>
  	</div>
  	
	</div> <!-- End of sidebar div -->
	
	<div id="bottom">

		<%= f.submit %>
	</div> <!-- End of bottom div -->
	
</div> <!-- End of wrapper class -->

<% end %>


